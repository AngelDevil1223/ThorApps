<div id="learnHow" class="@ModalClass bg-primary text-white" tabindex="-1" style="@ModalDisplay">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mdLabel">@Title</h5>
                <button type="button" class="close" @onclick="Hide">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ChildContent
            </div>
            <div class="modal-footer align-items-center">
                <a href="/contactUs" class="btn btn-outline-primary">CONTACT US</a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    static string ModalClass = "modal fade";
    static string ModalDisplay = "display: none;";
    public void Show()
    {
        ModalClass = "modal fade show";
        ModalDisplay = "display: block;";
        StateHasChanged();
    }
    void Hide()
    {
        ModalClass = "modal fade";
        ModalDisplay = "display: none;";
        StateHasChanged();
    }
}